# .env.example - copy to .env and fill values (DO NOT COMMIT secrets)

# Application secret (use a long random value in production)
MAEJINNAM_SECRET=replace-with-a-strong-secret

# Flask runtime flags
FLASK_DEBUG=1
FLASK_HOST=0.0.0.0
FLASK_PORT=5000

# Session / security flags
# Set SESSION_COOKIE_SECURE=1 when running behind HTTPS in production
SESSION_COOKIE_SECURE=0
ENABLE_HSTS=0

# Optional DB or other overrides
# Use SQLAlchemy when USE_SQLALCHEMY=1 and set DATABASE_URL accordingly
USE_SQLALCHEMY=0
DATABASE_URL=sqlite:///maejinnam.db
DATABASE_FILE=maejinnam.db

# CSP examples
# Production strict (recommended for HTTPS):
# MAEJINNAM_CSP=default-src 'self' https:; script-src 'self' https://cdn.tailwindcss.com; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com https://cdnjs.cloudflare.com; img-src 'self' data:; frame-ancestors 'none';

# Debug CSP (allows inline scripts/styles for development):
# MAEJINNAM_CSP_DEBUG=default-src 'self' http: https: 'unsafe-inline' 'unsafe-eval'; script-src 'self' https://cdn.tailwindcss.com 'unsafe-inline'; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com https://cdnjs.cloudflare.com; img-src 'self' data:; frame-ancestors 'none';
